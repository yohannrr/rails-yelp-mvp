<!-- app/views/reviews/new.html.erb -->
<h1>New Review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-group">
    <%= f.input :content, label: "Review Content", input_html: { rows: 4, class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :rating, as: :select, collection: [1, 2, 3, 4, 5], label: "Rating", input_html: { class: "form-control" } %>
  </div>

  <%= f.submit "Submit Review", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to Restaurant', restaurant_path(@restaurant), class: "btn btn-secondary mt-3" %>
